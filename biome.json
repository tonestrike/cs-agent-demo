{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "error"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      ".next",
      ".wrangler",
      "**/AGENTS.md",
      "**/.claude/**",
      "**/.cursor/**",
      "**/.github/copilot-instructions.md",
      "**/.github/prompts/**",
      "**/.github/agents/**",
      "**/.mcp.json",
      "**/.vscode/mcp.json",
      "**/.cursorignore"
    ]
  }
}
